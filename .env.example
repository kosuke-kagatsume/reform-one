# App Configuration
NODE_ENV=development
APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/reform_one
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-here-change-in-production
MAGIC_LINK_SECRET=your-magic-link-secret-here
MFA_ISSUER=ReformOne

# Stripe (Test Keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRICE_PREMIUM_10M=price_your_10m_price_id
STRIPE_PRICE_PREMIUM_20M=price_your_20m_price_id
STRIPE_PRICE_ADDON_PAPER=price_your_paper_addon_id
STRIPE_PRICE_ADDON_ELECTRONIC=price_your_electronic_addon_id

# Storage (Cloudflare R2)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=reform-one-assets
R2_PUBLIC_URL=https://assets.reform-one.jp

# Video (Cloudflare Stream)
CF_STREAM_ACCOUNT_ID=your_cloudflare_account_id
CF_STREAM_API_TOKEN=your_cloudflare_api_token
CF_STREAM_CUSTOMER_SUBDOMAIN=customer.videodelivery.net
CF_STREAM_SIGNING_KEY=your_stream_signing_key

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@reform-one.jp
EMAIL_REPLY_TO=support@reform-one.jp

# MakeShop Integration
MAKESHOP_API_KEY=your_makeshop_api_key
MAKESHOP_API_SECRET=your_makeshop_api_secret
MAKESHOP_SHOP_ID=your_makeshop_shop_id
MAKESHOP_WEBHOOK_SECRET=your_makeshop_webhook_secret

# Chatwork Integration
CHATWORK_API_TOKEN=your_chatwork_api_token
CHATWORK_ROOM_ID=your_chatwork_room_id
CHATWORK_SAML_METADATA_URL=https://www.chatwork.com/saml/metadata

# Analytics (BigQuery)
BIGQUERY_PROJECT_ID=reform-one
BIGQUERY_DATASET=analytics
BIGQUERY_KEY_FILE=/path/to/service-account-key.json

# Monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Rate Limiting
RATE_LIMIT_AUTH_ATTEMPTS=5
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW_MS=60000

# Session Configuration
SESSION_SECRET=your-session-secret-here-change-in-production
SESSION_DURATION_HOURS=24
SESSION_REFRESH_THRESHOLD_MINUTES=15

# Feature Flags
FEATURE_MFA_ENABLED=true
FEATURE_MAGIC_LINK_ENABLED=true
FEATURE_SEAT_LIMIT_ENABLED=false
FEATURE_DOMAIN_RESTRICTION_ENABLED=true
FEATURE_GRADUAL_SUSPENSION_ENABLED=true

# Billing Configuration
BILLING_TAX_RATE_DEFAULT=0.10
BILLING_TAX_RATE_REDUCED=0.08
BILLING_DUNNING_RETRY_DAYS=3,7,14
BILLING_SUSPENSION_GRACE_DAYS=14
BILLING_CANCELLATION_GRACE_DAYS=45